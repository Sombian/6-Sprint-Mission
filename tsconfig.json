{
	"compilerOptions":
	{
		"lib":
		[
			"DOM",
			"ESNext",
			"DOM.Iterable"
		],
		"paths":
		{
			"@/*": ["./*"]
		},
		"plugins":
		[
			{ "name": "next" }
		],
		//
		// settings
		//
		"jsx": "preserve", "strict": true, "noEmit": true, "allowJs": true, "skipLibCheck": true, "incremental": true,
		"module": "esnext", "moduleResolution": "bundler", "esModuleInterop": true, "isolatedModules": true, "resolveJsonModule": true,
	},
	"include":
	[
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts"
	],
	"exclude":
	[
		"node_modules"
	],
}
